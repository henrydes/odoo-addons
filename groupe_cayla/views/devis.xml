<odoo>
    <data>

        <record model="ir.ui.view" id="view_tree_devis">
            <field name="name">Liste des devis</field>
            <field name="model">groupe_cayla.devis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="numero"/>
                    <field name="client_id" attrs="{'invisible': True}"/>
                    <field name="date_edition"/>
                    <field name="montant"/>
                </tree>
            </field>
        </record>


        <record id="view_form_devis" model="ir.ui.view">
            <field name="name">Formulaire devis</field>
            <field name="model">groupe_cayla.devis</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <group col="1">
                                <group string="Type de devis">
                                    <table style='width:100%;' border='0'>
                                        <tr>
                                            <th style='width:16%; font-weight:bold; text-align: center'>
                                                <label for="type_octeha"/>
                                            </th>
                                            <th style='width:16%; font-weight:bold; text-align: center'>
                                                <label for="type_anah"/>
                                            </th>
                                            <th style='width:16%; font-weight:bold; text-align: center'>
                                                <label for="type_eco_cheque"/>
                                            </th>
                                            <th style='width:16%; font-weight:bold; text-align: center'>
                                                <label for="type_cee"/>
                                            </th>
                                            <th style='width:16%; font-weight:bold; text-align: center'>
                                                <label for="type_profesionnel"/>
                                            </th>
                                            <th style='width:20%; font-weight:bold; text-align: center'>
                                                <label for="remise"/>
                                            </th>

                                        </tr>
                                        <tr>
                                            <td style='text-align: center'>
                                                <field name="type_octeha"/>
                                            </td>
                                            <td style='text-align: center'>
                                                <field name="type_anah"/>
                                            </td>
                                            <td style='text-align: center'>
                                                <field name="type_eco_cheque"/>
                                            </td>
                                            <td style='text-align: center'>
                                                <field name="type_cee"/>
                                            </td>
                                            <td style='text-align: center'>
                                                <field name="type_profesionnel"/>
                                            </td>
                                            <td style='text-align: center'>
                                                <field name="remise"/>
                                            </td>
                                        </tr>
                                    </table>
                                </group>
                                <group string="Edition devis">
                                    <table style='width:100%;' border='0'>
                                        <tr>
                                            <td style='width:15%'> </td>
                                            <td style='width:50%'> </td>
                                            <td style='width:1%'> </td>
                                            <td style='width:34%; text-align: center' colspan="3">
                                                <label for="choix_tva"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="objet"/>
                                            </td>
                                            <td>
                                                <field name="objet"  options='{"no_open": True}'/>
                                            </td>
                                            <td> </td>
                                            <td colspan="3" style="text-align: center">
                                                <field name="choix_tva" options='{"no_open": True}' />
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="objet_autres"/>
                                            </td>
                                            <td>
                                                <field name="objet_autres"/>
                                            </td>
                                            <td> </td>
                                            <td style="text-align: center">QTE</td>
                                            <td style="text-align: center">P.U.</td>
                                            <td style="text-align: center">T</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="autre_1"/>
                                            </td>
                                            <td>
                                                <field name="autre_1" options='{"no_open": True}'/>
                                            </td>
                                            <td> </td>
                                            <td style="text-align: center">
                                                <field name="quantite_1"/>
                                            </td>
                                            <td style="text-align: center">
                                                <field name="prix_unitaire_1"/>
                                            </td>
                                            <td style="text-align: center">
                                                <field name="tarif_1"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="autre_2"/>
                                            </td>
                                            <td>
                                                <field name="autre_2" options='{"no_open": True}'/>
                                            </td>
                                            <td> </td>
                                            <td style="text-align: center">
                                                <field name="quantite_2"/>
                                            </td>
                                            <td style="text-align: center">
                                                <field name="prix_unitaire_2"/>
                                            </td>
                                           <td style="text-align: center">
                                                <field name="tarif_2"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="autre_3"/>
                                            </td>
                                            <td>
                                                <field name="autre_3" options='{"no_open": True}'/>
                                            </td>
                                            <td> </td>
                                            <td style="text-align: center">
                                                <field name="quantite_3"/>
                                            </td>
                                            <td style="text-align: center">
                                                <field name="prix_unitaire_3"/>
                                            </td>
                                            <td style="text-align: center">
                                                <field name="tarif_3"/>
                                            </td>
                                        </tr>

                                    </table>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="client_id"/>
                                    <field name="user_id"/>
                                    <field name="numero"/>
                                    <field name="montant"/>
                                    <field name="date_edition"/>
                                    <field name="date_envoi"/>
                                    <field name="date_acceptation"/>
                                    <field name="date_refus"/>
                                    <field name="motif_refus"/>
                                    <field name="entite_edition_id"/>

                                </group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>
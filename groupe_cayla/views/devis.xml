<odoo>
    <data>

        <record model="ir.ui.view" id="view_tree_devis">
            <field name="name">Liste des devis</field>
            <field name="model">groupe_cayla.devis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="numero"/>
                    <field name="client_id"/>
                    <field name="date_edition"/>
                    <field name="montant"/>
                </tree>
            </field>
        </record>



        <record id="view_form_devis" model="ir.ui.view">
            <field name="name">Formulaire devis</field>
            <field name="model">groupe_cayla.devis</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>

                            <field name="client_id"/>
                            <field name="user_id"/>
                            <field name="numero"/>
                            <field name="montant"/>
                            <field name="date_edition"/>
                            <field name="date_envoi"/>
                            <field name="date_acceptation"/>
                            <field name="date_refus"/>
                            <field name="motif_refus"/>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_form_planif_vt" model="ir.ui.view">
            <field name="name">Planif VT form view</field>
            <field name="model">groupe_cayla.planif_vt</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="client_id"/>
                            <field name="date_appel"/>
                            <field name="date_time_planif"/>
                            <field name="utilisateur_id"/>
                            <field name="technicien_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_form_vt" model="ir.ui.view">
            <field name="name">VT form view</field>
            <field name="model">groupe_cayla.vt</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="client_id"/>
                            <field name="date_de_realisation"/>
                            <field name="vt_validee"/>
                            <field name="documents_complets"/>
                            <field name="adresse"/>
                            <field name="utilisateur_id"/>
                            <field name="technicien_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>
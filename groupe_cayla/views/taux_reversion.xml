<odoo>
    <data>

        <record model="ir.ui.view" id="view_tree_taux_reversion">
            <field name="name">Liste des taux_reversion</field>
            <field name="model">groupe_cayla.taux_reversion</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="taux_as_char"/>
                </tree>
            </field>
        </record>


        <record id="view_form_taux_reversion" model="ir.ui.view">
            <field name="name">Formulaire taux_reversion</field>
            <field name="model">groupe_cayla.taux_reversion</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="taux"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>
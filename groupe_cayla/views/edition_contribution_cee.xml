<odoo>
    <data>

        <record model="ir.ui.view" id="view_tree_edition_contribution_cee">
            <field name="name">Liste des fiches contribution cee</field>
            <field name="model">groupe_cayla.edition_contribution_cee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cee_id"/>
                    <field name="user_id"/>
                    <field name="date_edition"/>
                </tree>
            </field>
        </record>


        <record id="view_form_edition_contribution_cee" model="ir.ui.view">
            <field name="name">Formulaire fiches contribution</field>
            <field name="model">groupe_cayla.edition_contribution_cee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <field name="cee_id" attrs="{'invisible': True}"/>
                            <field name="user_id"/>
                            <field name="date_edition"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_tree_controle_cee">
            <field name="name">Liste des fiches ah cee</field>
            <field name="model">groupe_cayla.controle_cee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cee_id"/>
                    <field name="user_id"/>
                    <field name="date_controle"/>
                </tree>
            </field>
        </record>


        <record id="view_form_controle_cee" model="ir.ui.view">
            <field name="name">Formulaire fiches ah</field>
            <field name="model">groupe_cayla.controle_cee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <field name="cee_id" attrs="{'invisible': True}"/>
                            <field name="user_id"/>
                            <field name="date_reception"/>
                            <field name="date_controle"/>

                            <field name="fiche_vt"/>
                            <field name="devis"/>
                            <field name="ah"/>
                            <field name="fiche_chantier"/>
                            <field name="dossier_valide"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>